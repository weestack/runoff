# const defines symbolic constants like #define in C
pinid LEDPin  7;
pinid ButtonPin 8;

messages {
	ButtonPressed;
	ButtonReleased;
}

task ledhandler() {
	for(;;) {
		receive {
		case ButtonPressed: turnOn(LEDPin);
		case ButtonReleased: turnOff(LEDPin);
		}
	}
}

function otherway() -> int {
	int state = readInput(ButtonPin);
	return state;
}

function setup() -> void {
	taskid nama = spawn ledhandler();
	inputPin(ButtonPin, nama, ButtonPressed, ButtonReleased);
	outputPin(LEDPin);
}
