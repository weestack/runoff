# const defines symbolic constants like #define in C
pinid LEDPin = 7P;
pinid ButtonPin = 8P;

messages {
	ButtonPressed;
	ButtonReleased{int i, float b};
	patter;
	lort;
	patterPlusLortHMMM;
}

task ledhandler(int f, int k, int[10] j) {
	f = k;
	j[0] = 420;
	for(;;) {
		receive {
		case ButtonPressed{}: turnOn(LEDPin);
		case ButtonReleased{i, b}: i = i % i;
		default:
		}
	}

	int i;
	switch(i){
	case 0: turnOn(LEDPin);
	case 1: turnOff(LEDPin);
	default: turnOn(LEDPin);
	}
}

function otherway() -> bool {
	bool state = readInput(ButtonPin);
	return state;
}

function setup() -> void {
	int[10] f;
	f[0] = 5;
	taskid mana;
	taskid nama = spawn ledhandler(1, 2, f);
	mana = spawn ledhandler(1,2,f);
	inputPin(ButtonPin, nama, ButtonPressed{}, ButtonReleased{1, 2.0});
	outputPin(LEDPin);
}
